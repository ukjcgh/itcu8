<config>
	<structure>
		<field>
			<code>code</code>
			<unique>1</unique>
			<type>code</type>
		</field>
		<field>
			<code>domain</code>
			<unique>1</unique>
			<type>url</type>
		</field>
		<field>
			<code>path</code>
			<unique>1 per domain</unique>
		</field>
	</structure>
	<grid>
		<title>Websites</title>
		<columns>
			<code />
			<domain />
			<path />
		</columns>
	</grid>
	<forms>
		<edit>
			<title>Edit Website</title>
			<fields>
				<code />
				<domain />
				<path />
			</fields>
		</edit>
		<add>
			<title>Add Website</title>
			<fields>
				<code />
				<domain />
				<path />
			</fields>
		</add>
	</forms>
</config>